[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    env,
    .env,
    build,
    dist,
    *.egg-info

# Códigos de error a ignorar
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (manejado por black)
    W503,  # line break before binary operator
    E402,  # module level import not at top of file

# Configuración de complejidad
max-complexity = 10

# Conteo de estadísticas
count = True
statistics = True
