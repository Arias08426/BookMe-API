[flake8]
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    env,
    .env,
    build,
    dist,
    *.egg-info

# Códigos de error a ignorar
ignore = E203, E501, W503, E402

# Configuración de complejidad
max-complexity = 10

# Conteo de estadísticas
count = True
statistics = True
